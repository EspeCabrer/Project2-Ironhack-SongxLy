<div class="signup-page">
   <div class="container-signup">
   <div class="container-register d-flex flex-column justify-content-around text-center">
      <div class="title d-flex align-items-center mt-1">
         <h2 class="px-3">Crear cuenta</h2>
      </div>
      <div>
         <form class="d-flex flex-column justify-content-center" 
               action="/auth/signup" method="POST">
            <label class="user-password-labels mb-2">
               <span class="fas fa-user"></span>
               <input required type="text" name="username">
            </label>
            <label class="user-password-labels mb-4 ">
               <span class="fas fa-key"></span>
               <input required type="password" name="password">
            </label>
            <div class="d-flex align-items-center justify-content-center">
               <button class="mx-3 btn btn-light"  type="submit">Sign Up</button>
            </div>
         </form>
               {{#if errorMessage}}
                 <div class="mx-2 b-2 p-2">
                   {{errorMessage}}
                 </div> 
              {{/if}}
      </div>
      <div>
         <p>¿Ya tienes una cuenta? 
            <a href="/auth/login">Inicia sesión</a>
         </p>
      </div>

   </div>
  </div>
</div>