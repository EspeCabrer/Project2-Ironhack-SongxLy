
<div class="profile-page">
    <h2>Hola {{user.username}}!</h2>
    <div class= "totalArtists row row-cols-1 row-cols-md-4 g-4 text-center m-3">
        {{#each userTracks}}
         <div class= "col">
            <div class="card mb-3 bg-light">
                <div class= "card-header">
                    <h5>{{artist}}</h5>
                </div>
                 <img class="img" src="/images/partitura.jpeg" alt="">
                 <p class="m-2">{{name}}</p>
                <div class="ver-letra d-flex justify-content-end align-items-center m-2">
                    <div class="col-6 text-center">
                        <a class="btn m-2" href="/lyric/{{artist}}/{{name}}">Ver letra</a>  
                    </div>
                    <div class="delete-favorite col-3 text-center">
                        <form action="/favorites/delete" method="post">
                             <input type="hidden" name="name" value="{{name}}">
                             <input type="hidden" name="artist" value="{{artist}}">
                             <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>       
                         </form>  
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{#if user}}
    <p class="hide" id="check-user">true</p>
{{/if}}