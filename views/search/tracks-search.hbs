
<div class= "tracks-search-page">
    <h2>Resultados de: "{{trackNameSearch}}"</h2>
    <div class= "totalArtists row row-cols-1 row-cols-md-4 g-4 text-center m-3">
        {{#each tracksArr}}
         <div class= "col">
            <div class="card mb-3 bg-light">
                <div class= "card-header text-dark">
                    <h5>{{artists.[0].name}}</h5>
                </div>
                 <img class="img" src="{{album.images.[0].url}}" alt="{{name}}">
                 <p class="m-2">{{name}}</p>
                 {{#if this.preview_url}}
                        <audio controls src="{{preview_url}}"></audio>   
                  {{/if}}
                 <a class ="btn btn-album" href="/albums/{{artists.[0].id}}">Ver Ã¡lbumes</a>

                <div class="ver-letra d-flex justify-content-around align-items-center m-2">
                    <div class="col-6 text-center">
                        <a class="btn m-2" href="/lyric/{{artists.0.name}}/{{name}}">Ver letra</a>  
                    </div>

                    <div class="add-favorite col-6 text-center">
                      <form action="/favorites/add" method="post">
                             <input type="hidden" name="name" value="{{name}}">
                             <input type="hidden" name="artist" value="{{artists.0.name}}">
                             <button type="submit" class="btn">Add favorite</button>       
                      </form> 
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{#if user}}
    <p class="hide" id="check-user">true</p>
{{/if}}