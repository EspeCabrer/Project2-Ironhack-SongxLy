
<div class= "artists-page">
    <h2>ARTISTAS</h2>
    <div class= "totalArtists row row-cols-1 row-cols-md-3 g-4 text-center m-3">
        {{#each totalArtistsArr}}
         <div class= "col">
            <div class="card border-info mb-3">
                 <img class="img card-img-top" src="{{this.images.[0].url}}" alt="{{this.name}}">
                 <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <a class =" btn btn-info" href="/albums/{{this.id}}">Ver álbums</a>  
                 </div>       
            </div>
        </div>
        {{/each}}
    </div>
</div>

