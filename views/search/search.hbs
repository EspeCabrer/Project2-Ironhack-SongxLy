

<div class= "search-page d-flex flex-column justify-content-center" >
  <div class= "search-track d-flex justify-content-center align-items-center">
    <form action="/tracks" method="GET" class= "d-flex align-items-center"> 
      <input class="m-3" type="text" name="track" placeholder="Búsqueda por canción">
      <button class="btn btn-light" type="submit"><i class="fas fa-search"></i></button>
    </form>
  </div>

  <div class= "search-artist d-flex justify-content-center align-items-center">
    <form action="/artists" method="GET" class= "d-flex align-items-center"> 
      <input class="m-3" type="text" name="artist" placeholder="Búsqueda por artista">
      <button class="btn" type="submit"><i class="fas fa-search"></i></button>
    </form>
  </div>

{{#if user}}
    <p class="hide" id="check-user">true</p>
{{/if}}

</div>



